#include<iostream>
#include<cmath>
using namespace std;

void print(int num);
int main()
{
	int n = 0;
	cin >> n;
	for (int i = 1; i <= (n - (n / 2)); i++)
	{
		print(2 * i - 1);
		cout << endl;
	}
	for (int i = n / 2; i > 0; i--)
	{
		print(2 * i - 1);
		cout << endl;
	}

	return 0;
}

void print(int num) {
	for (int i = 0; i < num; i++) {
		cout << " " << "*";
	}
}
